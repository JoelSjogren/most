{
  "name": "MoST Subtitles",
  "version": "0.5",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "MoST Subtitles",
      "default_icon": "icon.ico"
  },
  "manifest_version": 2,
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["zepto.js", "overlay.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["demo.srt", "demo2.srt"]
}
