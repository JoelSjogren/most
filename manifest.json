{
  "name": "MoST Subtitles",
  "version": "0.6",
  "permissions": [
    "tabs", "http://downsub.com/"
  ],
  "browser_action": {
      "default_title": "MoST Subtitles",
      "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["zepto.js", "overlay.js"],
      "run_at": "document_end"
    }
  ]
}
